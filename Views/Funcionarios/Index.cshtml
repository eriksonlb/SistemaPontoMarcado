@model IEnumerable<PontoMarcado.WebApp.Models.ViewModels.FuncionarioViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
        <h1 class="page-title txt-color-blueDark">

            <i class="fa-fw fa fa-pencil-square-o"></i>
            Cadastros
            <span>
                >
                Funcionários
            </span>
        </h1>
    </div>
</div>

<section id="widget-grid">
    <div class="row">
        <article class="col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-list-ul"></i> </span>
                    <h2>Listagem de Funcionários </h2>
                    <div class="widget-toolbar pull-right">
                        <a asp-action="Create" class="btn btn-primary">
                            Novo Cadastro
                        </a>
                    </div>
                </header>

                <div class="col-lg-12">
                    <div class="widget-body no-padding">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NomeFuncionario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Usuario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SalarioBase)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NomeFuncionario)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Usuario.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SalarioBase)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>

<p>

</p>

